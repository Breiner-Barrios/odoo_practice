<odoo>
    <record id="view_modulo_python_list" model="ir.ui.view">
        <field name="name">modulo.python.list</field>
        <field name="model">modulo.python</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_modulo_python_form" model="ir.ui.view">
        <field name="name">modulo.python.form</field>
        <field name="model">modulo.python</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_modulo_python" model="ir.actions.act_window">
        <field name="name">Modulo_python</field>
        <field name="res_model">modulo.python</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_modulo_python_root" name="Modulo_python" sequence="10"/>
    <menuitem id="menu_modulo_python_main" name="Registros" parent="menu_modulo_python_root" action="action_modulo_python" sequence="10"/>
</odoo>
