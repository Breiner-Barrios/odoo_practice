<odoo>
    <record id="view_riwiscrum_list" model="ir.ui.view">
        <field name="name">riwiscrum.list</field>
        <field name="model">riwiscrum</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="required_by"/>
                <field name="accepted_by"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <record id="view_riwiscrum_form" model="ir.ui.view">
        <field name="name">riwiscrum.form</field>
        <field name="model">riwiscrum</field>
        <field name="arch" type="xml">
            <form>
                <header>
                  <field name="status" widget="statusbar"/>
                  <button name='reset_to_draft' confirm="¿Desea cambiar el estado a Borrador?" string="Borrador" type="object" class="oe_highlight" invisible="status == 'draft'"/>
                  <button name='pasar_review' confirm="¿Desea cambiar el estado a review?" string="Review" type="object" class="oe_highlight" invisible="status == 'review'"/>
                  <button name='pasar_running' confirm="¿Desea cambiar el estado a En Progreso?" string="En Progreso" type="object" class="oe_highlight" invisible="status == 'running'"/>
                  <button name='pasar_paused' confirm="¿Desea cambiar el estado a Pausado?" string="Pausado" type="object" class="oe_highlight" invisible="status == 'paused'"/>
                  <button name='pasar_accepted' confirm ="¿Desea cambiar el estado a Aceptado?" string="Aceptado" type="object" class="oe_highlight" invisible="status == 'accepted'"/>
                  <button name='pasar_refused' confirm="¿Desea cambiar el estado a Rechazado?" string="Rechazado" type="object" class="oe_highlight" invisible="status == 'refused'"/>
                  <button name='pasar_cancel' confirm="¿Desea cambiar el estado a Cancelado?" string="Cancelado" type="object" class="oe_highlight" invisible="status == 'cancel'"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="EN PROGRESO" bg_color="text-bg-info" invisible="status != 'running'"/>
                    <widget name="web_ribbon" title="ACEPTADO" bg_color="text-bg-success" invisible="status != 'accepted'"/>
                    <widget name="web_ribbon" title="RECHAZADO" bg_color="text-bg-danger" invisible="status != 'refused'"/>
                    <widget name="web_ribbon" title="PAUSADO" bg_color="text-bg-warning" invisible="status != 'paused'"/>
                    <widget name="web_ribbon" title="CANCELADO" bg_color="text-bg-danger" invisible="status != 'cancel'"/>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="required_by"/>
                        <field name="accepted_by"/>
                        <field name="active"/>
                    </group>
                    <notebook>
                        <page name="tarea" string="Tareas">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="tipo_tarea"/>
                                    <field name="descripcion"/>
                                    <field name="asignado_a_ids" widget="many2many_tags"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="prioridad" widget="priority"/>
                                    <field name="status"/>
                                </list>
                            </field>
                        </page>
                        <page name="seguimiento" string="Seguimiento">
                            <group>
                                <group>
                                    <field name="fecha_review"/>
                                    <field name="fecha_running"/>
                                    <field name="fecha_paused"/>
                                </group>
                                <group>
                                    <field name="fecha_accepted"/>
                                    <field name="fecha_refused"/>
                                    <field name="fecha_cancel"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_riwiscrum" model="ir.actions.act_window">
        <field name="name">Riwiscrum</field>
        <field name="res_model">riwiscrum</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_riwiscrum_root" name="Riwiscrum" sequence="10"/>
    <menuitem id="menu_riwiscrum_main" name="Registros" parent="menu_riwiscrum_root" action="action_riwiscrum" sequence="10"/>
</odoo>